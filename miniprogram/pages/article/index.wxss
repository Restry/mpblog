/**index.wxss**/
.weui-panel {
  margin-top: 0;
}

.weui-media-box_appmsg .weui-media-box__left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 56px;
}

.weui-media-box_appmsg .weui-media-box__info {
  margin-top: 0;
}

.weui-media-box_appmsg .weui-media-box__hd_in-appmsg {
  margin-right: 0;
  margin-left: 0.8em;
  width: 78px;
  height: 56px;
  line-height: 56px;
}

.weui-media-box_appmsg .weui-media-box__meta {
  color: rgba(0, 0, 0, 0.45);
  font-size: 11px;
}

.weui-media-box_multiImage .weui-media-box__thumb-warp {
  margin-top: .2em;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.weui-media-box_multiImage .weui-media-box__hd_in-appmsg {
  width: 78px;
  height: 56px;
  line-height: 56px;
  margin-right: .4em;
}

.list {
  overflow:auto;
  margin:auto;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}

.weui-loadmore__box {
  border-top:1px solid #e5e5e5;
  background-color: #F8F8F8;
  margin-bottom: -1em;
}

.weui-loadmore {
  background-color: #F8F8F8;
  margin-bottom: -2.4em;
  padding-bottom: 1em;
}
